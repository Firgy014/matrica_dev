<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree view -->
        <record id="view_crm_segment_product_tree" model="ir.ui.view">
            <field name="name">crm.segment.product.tree</field>
            <field name="model">crm.segment.product</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_crm_segment_product_form" model="ir.ui.view">
            <field name="name">crm.segment.product.form</field>
            <field name="model">crm.segment.product</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action segment product -->
        <record id="action_crm_segment_product" model="ir.actions.act_window">
            <field name="name">Segment Product</field>
            <field name="res_model">crm.segment.product</field>
            <field name="view_mode">tree,form</field>
        </record>
        
    </data>
</odoo>
